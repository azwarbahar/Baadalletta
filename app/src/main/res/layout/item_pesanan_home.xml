<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary10"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tv_nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="1"
            android:textColor="@color/ColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_nomor"
            android:layout_alignBottom="@id/tv_jarak"
            android:layout_marginLeft="4dp"
            android:background="@color/ColorPrimary" />

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:layout_toRightOf="@id/tv_nomor"
            android:text="@string/alamat"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alamat"
            android:layout_alignLeft="@id/tv_alamat"
            android:layout_marginTop="3dp"
            android:text="Nama : Azwar Bahar"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_kode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@id/tv_nama"
            android:layout_alignLeft="@id/tv_alamat"
            android:text="Kode : Azwar Bahar" />

        <TextView
            android:id="@+id/tv_jarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kode"
            android:layout_alignLeft="@id/tv_alamat"
            android:layout_marginTop="5dp"
            android:text="Jarak : 2.3 Km"
            android:textColor="@color/ColorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>